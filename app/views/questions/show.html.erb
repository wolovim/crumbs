<h1><%= @question.title %> <%= link_to "Delete", @question, method: :delete, class: "btn btn-danger btn-sm" %></h1>
<%= @question.content %>

<% if @question.answers.any? %>
	<h3><%= @question.answers.count %> Answers:</h3>
	<table class="table">
		<% @question.answers.each do |answer| %>
		<tr>
			<td><%= answer.body %></td>
			<td><%= answer.created_at.strftime("%d %b. %Y") %></td>
		</tr>
		<% end %>
	</table>
<% else %>
	<h3>No Answers yet!</h3>
<% end %>

<br/>

<h3>Add an answer</h3>
<%= form_for [@question, @answer] do |f| %>
	<%= f.label :body, "Response:" %><br/>
	<%= f.text_area :body %><br/>
	<%= f.submit "Submit Answer", class: "btn btn-primary" %>
<% end %>

<br/>
<%= link_to "Back", questions_path, class: "btn btn-default" %>